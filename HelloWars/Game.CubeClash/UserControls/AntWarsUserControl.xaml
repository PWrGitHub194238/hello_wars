<UserControl x:Class="Game.AntWars.UserControls.AntWarsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:Common.Helpers;assembly=Common"
             xmlns:models1="clr-namespace:Game.AntWars.Models"
             xmlns:resoures="clr-namespace:Game.AntWars.UserControls.Resoures"
             xmlns:userControls1="clr-namespace:Game.AntWars.UserControls"
             xmlns:viewModels1="clr-namespace:Game.AntWars.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModels1:AntWarsViewModel}">

    <Grid>
        <ItemsControl Width="{Binding BattlegroundWidth}" Height="{Binding BattlegroundHeigth}" ItemsSource="{Binding BattlefieldObjectsCollection}">
            <ItemsControl.Resources>
                <DataTemplate DataType="{x:Type models1:ExplosionModel}">
                    <userControls1:MissileUserControl/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type models1:GridUnitModel}">
                    <resoures:GridUnit/>
                </DataTemplate>
            </ItemsControl.Resources>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid helpers:GridHelper.RowCount="{Binding RowCount}" helpers:GridHelper.ColumnCount="{Binding ColumnCount}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Column" Value="{Binding ViewModel.X}" />
                    <Setter Property="Grid.Row" Value="{Binding ViewModel.Y}" />
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>

        <ItemsControl Width="{Binding BattlegroundWidth}" Height="{Binding BattlegroundHeigth}" ItemsSource="{Binding MovableObjectsCollection}">
            <ItemsControl.Resources>
                <DataTemplate DataType="{x:Type models1:AntModel}">
                    <userControls1:AntUserControl/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type models1:MissileModel}">
                    <userControls1:MissileUserControl/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels1:ExplosionViewModel}">
                    <userControls1:MissileUserControl/>
                </DataTemplate>
            </ItemsControl.Resources>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid helpers:GridHelper.RowCount="{Binding RowCount}" helpers:GridHelper.ColumnCount="{Binding ColumnCount}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Column" Value="{Binding ViewModel.X}"/>
                    <Setter Property="Grid.Row" Value="{Binding ViewModel.Y}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>

        <Image Stretch="Fill"  Visibility="{Binding SplashScreenVisible, Mode=TwoWay}">
            <Image.Source>
                <BitmapImage UriSource="/Game.AntWars;component/Images/Backgrounds/helloScreen.jpeg"/>
            </Image.Source>
        </Image>
    </Grid>
</UserControl>
