<UserControl x:Class="Game.CubeClash.UserControls.CubeClashUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:Common.Helpers;assembly=Common"
             xmlns:viewModels="clr-namespace:Game.CubeClash.ViewModels"
             xmlns:resoures="clr-namespace:Game.CubeClash.UserControls.Resoures"
             xmlns:userControls="clr-namespace:Game.CubeClash.UserControls"
             mc:Ignorable="d" Width="200" Height="200"
             d:DataContext="{d:DesignInstance Type=viewModels:CubeClashViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Content="DoSomething" Command="{Binding DoMoveCommand}" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding GridCollection}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid Width="{Binding}" Height="{Binding}" helpers:GridHelper.RowCount="{Binding BattlegroundHeigth}" helpers:GridHelper.ColumnCount="{Binding BattlegroundWidth}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <resoures:GridUnit/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Column" Value="{Binding X}" />
                    <Setter Property="Grid.Row" Value="{Binding Y}" />
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding PlayersCollection}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid Width="{Binding}" Height="{Binding}" helpers:GridHelper.RowCount="{Binding BattlegroundHeigth}" helpers:GridHelper.ColumnCount="{Binding BattlegroundWidth}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <userControls:CubeUserControl/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Grid.Column" Value="{Binding X}"/>
                    <Setter Property="Grid.Row" Value="{Binding Y}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>

    </Grid>
</UserControl>
