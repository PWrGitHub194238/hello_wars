<UserControl x:Class="Game.CubeClash.UserControls.CubeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">

    <Grid>
        <Canvas>
            <Rectangle Canvas.Top="-70" Canvas.Left="-35" Width="90" Height="110" Fill="White" Opacity="0.2" Visibility="Collapsed"/>
            <Rectangle Canvas.Top="-20" Canvas.Left="-35" Width="90" Height="110" Fill="White" Opacity="0.2" Visibility="Collapsed"/>
            <Rectangle Canvas.Top="-35" Canvas.Left="-70" Width="110" Height="90" Fill="White" Opacity="0.2" Visibility="Visible"/>
            <Rectangle Canvas.Top="-35" Canvas.Left="-20" Width="110" Height="90" Fill="White" Opacity="0.2" Visibility="Visible"/>
        </Canvas>
        <Rectangle Width="8" Height="8" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="DarkRed" StrokeThickness="0.5" Stroke="Black"/>
    </Grid>
</UserControl>
