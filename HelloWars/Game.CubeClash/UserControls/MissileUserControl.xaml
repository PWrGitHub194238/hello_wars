<UserControl x:Class="Game.CubeClash.UserControls.MissileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Width="{Binding ViewModel.Width}" Height="{Binding ViewModel.Heigth}">
        <Image Source="{Binding ViewModel.Image}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid.RenderTransform>
            <RotateTransform Angle="{Binding ViewModel.Angle}" CenterX="5" CenterY="5"/>
        </Grid.RenderTransform>
    </Grid>
</UserControl>
