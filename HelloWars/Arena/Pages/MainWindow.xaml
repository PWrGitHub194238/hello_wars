<Window x:Class="Arena.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Arena.Pages.Controls"
        Title="Hello Wars Main Window" Width="500" Height="300" 
        Background="DimGray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Viewbox>
            <TextBlock  Text="Hello_Wars();"  FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Viewbox>
        <Button Grid.Row="1" Width="100" Height="20" Click="ButtonBase_OnClick">
            <Viewbox>
                <TextBlock Text="START"/>
            </Viewbox>
        </Button>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="222"/>
                    <ColumnDefinition Width="222"/>
                    <ColumnDefinition Width="222"/>
                </Grid.ColumnDefinitions>

                <controls:RoundViewControl Grid.Column="0" x:Name="RoundViewControl1" HorizontalAlignment="Left"/>
                <controls:RoundViewControl Grid.Column="1" x:Name="RoundViewControl2" HorizontalAlignment="Left"/>
                <controls:RoundViewControl Grid.Column="2" x:Name="RoundViewControl3" HorizontalAlignment="Left"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
